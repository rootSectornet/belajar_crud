extends layout

block content
  h1= title
  a(href='/new_student') Add New Student
  div
    table(border='1')
      thead
        th CODE
        th NAME
        th DEPARTMENT
        th AGE
        th Action
      tbody
        each s in students
          tr
            td #{s.code}
            td #{s.name}
            td #{s.department}
            td #{s.age}
            td #[a(href='/student_detail/'+s.code) Detail] | #[a(href='/update_student/'+s.code) Edit] | #[a(href='/delete_student/'+s.code) Delete]
